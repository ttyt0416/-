<%- include("partials/header") %>



<div class="blogPostContainer">
	<div class="blogPost">
		<div class="blogPostTop">
			<h1>
				Edit <%= blog.title %>
			</h1>
		</div>	
		<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			<div class="blogPostBox">
				<label>Title
					<input class="title" type="text" name="blog[title]" value="<%= blog.title %>">
				</label>
			</div>
			<div class="blogPostBox">
				<label>Image
					<input class="image" type="text" name="blog[image]" value="<%= blog.image %>">
				</label>
			</div>
			<div class="blogPostBox">
				<label>Blog Content
					<textarea class="body" name="blog[body]"><%= blog.body %></textarea>
				</label>
			</div>
			<div class="blogPostBox">
				<button class="submitBtn">
					Submit
				</button>
			</div>
		</form>
	</div>
</div>


<%- include("partials/footer") %>